apiVersion: v1 
kind: Pod 
metadata:
  name: cyclictest-no-stress 
spec:
  restartPolicy: Never 
  containers:
  - name: cyclictest-no-stress 
    image: cscojianzhan/cyclictest_no_stress
    resources:
      limits:
        memory: "200Mi"
        cpu: "1"
    env:
    - name: DURATION
      value: "24h"
    - name: CORES
      value: "1"
    securityContext:
      #privileged: true
      capabilities:
        add:
          - SYS_NICE
          - SYS_RAWIO
          - IPC_LOCK
    volumeMounts:
    - mountPath: /cyclictest_results
      name: results-volume
    - mountPath: /dev/cpu_dma_latency
      name: cstate
  volumes:
  - name: results-volume
    #emptyDir: {}
    hostPath:
      path: /tmp/k8s_cyclictest_results
  - name: cstate
    hostPath:
      path: /dev/cpu_dma_latency
  
